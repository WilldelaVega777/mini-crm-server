        "**/package-lock.json"  : true,
        "**/tsconfig.json"      : true,
        "**/.editorconfig"      : true,
        "**/.eslintrc"          : true,
        "**/tslint.json"        : true,
        "**/serviceWorker.ts"   : true,
        "**/*.test.tsx"         : true,
        "**/react-app-env.d.ts" : true,
        "**/graphql-schema.json": true,
        "**/types"              : true
    }
